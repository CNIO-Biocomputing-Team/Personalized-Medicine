%h2== Gene: #{name.last}

%div#tabs
  %ul
    %li
      %a(href='#tabs-0') Gene Description
    %li 
      %a(href='#tabs-1') Pathways
    %li 
      %a(href='#tabs-2') Drugs
     
  %div#tabs-0
    = haml :_gene, :layout => false, :locals => {:entrez => entrez,
                                               :name => name,
                                               :gene_info => gene_info,
                                               :description => description,
                                               :summary => summary}  
  %div#tabs-1
  
  %div#tabs-2
    = haml :_drugs, :layout => false, :locals => {:gene_info => gene_info}  
  

