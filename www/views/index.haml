%h1#header Personalized Medicine

#menu
  %p#file_selection
    - $table_config.keys.sort.each do |file|
      - if file == @file
        %a.active(href="/#{ file }")= file
      - else
        %a(href="/#{ file }")= file
  %p#excel
    %a(href="/excel/#{ @file }") Download table in Excel


%table{:id => "summary_table",:style => "display:none"}

#genecard
  
:javascript
  genecard_href = '/genecard/' + '#{@file}';

  $('#summary_table').flexigrid(
    #{ @flextable.flexicode("/data/" + @file).gsub(/,/,",\n") }
  )
